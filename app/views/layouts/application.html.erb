<!DOCTYPE html>
<html>
  <head>
    <title>ArborShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <% unless current_user %>
      <%= link_to 'Sign in with Google', '/auth/google' %>
      <% end %>
    </nav>
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>
    <%= yield %>
  </body>
</html>
